{
  "name": "react-frontend",
  "version": "1.0.0",
  "description": "A React template",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "npx prettier --write .",
    "test": "jest --env=jsdom",
    "test:ci": "jest --env=jsdom --passWithNoTests",
    "test:watch": "jest --env=jsdom --watchAll",
    "build": "npm run build:prod",
    "build:dev": "webpack --mode=development --progress",
    "build:prod": "webpack --mode=production --node-env=production --progress",
    "start": "npm run serve",
    "serve": "webpack serve --hot --open --live-reload --port=3000 --progress --history-api-fallback",
    "profile": "webpack --profile",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "extract-translations": "i18next --config ./i18next-parser.config.js"
  },
  "author": "Digio",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/react-test-renderer": "^18.0.0",
    "@types/webpack": "^5.28.1",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "babel-jest": "^29.5.0",
    "compression-webpack-plugin": "^10.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.3",
    "i18next-parser": "^0.13.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "json-server": "^0.17.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react-test-renderer": "^18.2.0",
    "thread-loader": "^4.0.1",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3",
    "workbox-webpack-plugin": "^6.5.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.12.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.4",
    "react-i18next": "^12.2.2",
    "react-router-dom": "^6.11.1"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "eslint ./src --fix",
      "prettier --write ./src",
      "npm run test:ci"
    ]
  }
}
